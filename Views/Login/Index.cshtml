@model ProyectoProgra2.Models.USUARIOS
@{
    ViewBag.Title = "Inicio de Sesión";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Inicio de Sesión</h2>
            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.USUARIO, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.USUARIO, new { @class = "form-control", placeholder = "Nombre de Usuario o Correo Electrónico" })
                        @Html.ValidationMessageFor(model => model.USUARIO, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CONTRASENA, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.PasswordFor(model => model.CONTRASENA, new { @class = "form-control", placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(model => model.CONTRASENA, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>